# =============================================================================
# КОНФИГУРАЦИЯ API КЛЮЧЕЙ ДЛЯ КРИПТОВАЛЮТНОГО СКАННЕРА
# =============================================================================

# BINANCE API (основная биржа)
# Получите ключи на: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# BYBIT API (дополнительная биржа, опционально)
# Получите ключи на: https://www.bybit.com/app/user/api-management
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET_KEY=your_bybit_secret_key_here

# OKEX API (дополнительная биржа, опционально)
OKEX_API_KEY=your_okex_api_key_here
OKEX_SECRET_KEY=your_okex_secret_key_here
OKEX_PASSPHRASE=your_okex_passphrase_here

# WEBSOCKET СЕРВЕР
# =============================================================================
# Хост WebSocket сервера (0.0.0.0 для внешнего доступа)
WEBSOCKET_HOST=localhost

# Порт WebSocket сервера
WEBSOCKET_PORT=8080

# Приватный токен для полного доступа к WebSocket данным
WEBSOCKET_PRIVATE_TOKEN=your_super_secret_private_token_2025

# REDIS (опционально, для кэширования)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# POSTGRESQL (опционально, для хранения истории)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cryptoscanner
POSTGRES_USER=scanner
POSTGRES_PASSWORD=your_postgres_password

# TELEGRAM BOT (опционально, для алертов)
# =============================================================================
# Получите токен у @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# DISCORD WEBHOOK (опционально, для алертов)
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# EMAIL (опционально, для алертов)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_TO=alerts@yourcompany.com

# МОНИТОРИНГ
# =============================================================================
# Включить экспорт метрик Prometheus (true/false)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Включить отправку в Grafana Cloud
GRAFANA_ENABLED=false
GRAFANA_URL=your_grafana_url
GRAFANA_TOKEN=your_grafana_token

# ОКРУЖЕНИЕ
# =============================================================================
# Режим работы (development/production/testing)
ENVIRONMENT=development

# Уровень логирования (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Использовать testnet для тестирования (true/false)
USE_TESTNET=false

# =============================================================================
# ИНСТРУКЦИЯ ПО НАСТРОЙКЕ:
# =============================================================================
# 1. Скопируйте этот файл в .env:
#    cp .env.example .env
#
# 2. Отредактируйте .env и добавьте ваши реальные API ключи
#
# 3. Установите права доступа:
#    chmod 600 .env
#
# 4. НЕ ДОБАВЛЯЙТЕ .env в git! Файл уже в .gitignore
#
# 5. Для получения Binance API ключей:
#    - Войдите в аккаунт Binance
#    - Перейдите в Account -> API Management
#    - Create API Key
#    - Включите "Enable Futures" для доступа к фьючерсам
#    - НЕ включайте "Enable Withdrawals" (не нужно для сканирования)
#
# 6. Проверьте подключение:
#    python main.py --primary-scan-only --symbols 5
#
# =============================================================================
# ВАЖНЫЕ ЗАМЕЧАНИЯ ПО БЕЗОПАСНОСТИ:
# =============================================================================
# - Никогда не публикуйте API ключи публично
# - Используйте IP whitelist в настройках API ключей
# - Регулярно ротируйте ключи
# - Для продакшена используйте переменные окружения вместо .env файла
# - Мониторьте активность API ключей на бирже
#
# =============================================================================
