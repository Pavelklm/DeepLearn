{
	"logging": {
		"level": "INFO"
	},
	"data_settings": {
		"default_ticker": "BTC-USD",
		"default_period": "2y",
		"default_interval": "1h"
	},
	"performance": {
		"max_workers": 15,
		"initial_balance": 10000,
		"commission": 0.001
	},
	"indicators": {
		"enabled_indicators": [
			"RSI",
			"MACD",
			"SMA",
			"EMA",
			"BBANDS",
			"STOCH",
			"ADX",
			"CCI",
			"MFI",
			"WILLR",
			"ATR",
			"OBV",
			"TEMA",
			"DEMA",
			"KAMA"
		],
		"parameters": {
			"RSI": { "timeperiod": { "min": 10, "max": 30, "type": "int" } },
			"MACD": {
				"fastperiod": { "min": 8, "max": 15, "type": "int" },
				"slowperiod": { "min": 20, "max": 30, "type": "int" },
				"signalperiod": { "min": 7, "max": 12, "type": "int" }
			},
			"SMA": { "timeperiod": { "min": 10, "max": 50, "type": "int" } },
			"EMA": { "timeperiod": { "min": 10, "max": 50, "type": "int" } },
			"BBANDS": {
				"timeperiod": { "min": 15, "max": 25, "type": "int" },
				"nbdevup": { "min": 1.5, "max": 2.5, "type": "float" },
				"nbdevdn": { "min": 1.5, "max": 2.5, "type": "float" }
			},
			"STOCH": {
				"fastk_period": { "min": 10, "max": 20, "type": "int" },
				"slowk_period": { "min": 3, "max": 10, "type": "int" },
				"slowd_period": { "min": 3, "max": 10, "type": "int" }
			},
			"ADX": { "timeperiod": { "min": 10, "max": 20, "type": "int" } },
			"CCI": { "timeperiod": { "min": 15, "max": 25, "type": "int" } },
			"MFI": { "timeperiod": { "min": 10, "max": 20, "type": "int" } },
			"WILLR": { "timeperiod": { "min": 10, "max": 20, "type": "int" } },
			"ATR": { "timeperiod": { "min": 10, "max": 20, "type": "int" } },
			"OBV": {},
			"TEMA": { "timeperiod": { "min": 15, "max": 35, "type": "int" } },
			"DEMA": { "timeperiod": { "min": 15, "max": 35, "type": "int" } },
			"KAMA": { "timeperiod": { "min": 15, "max": 35, "type": "int" } }
		}
	},
	"rule_generation": {
		"min_conditions": 1,
		"max_conditions": 3,
		"enable_crossovers": true
	},
	"evolution": {
		"population_size": 50,
		"generations": 5,
		"elite_ratio": 0.2,
		"crossover_rate": 0.7,
		"mutation_rate": 0.3,
		"tournament_size": 3,
		"mutation": {
			"enabled": true,
			"types": [
				"modify_indicator_param",
				"modify_threshold",
				"change_logic_operator",
				"modify_risk_rules"
			]
		}
	},
	"validation": {
		"min_trades_threshold": 5,
		"max_trades_threshold": 2000,
		"min_win_rate": 0.2,
		"max_drawdown_threshold": 0.3
	},
	"scoring": {
		"weights": {
			"sharpe_ratio": 0.3,
			"profit_factor": 0.4,
			"win_rate": 0.2,
			"trade_frequency": 0.1,
			"drawdown_penalty": 0.2
		},
		"optimal_trade_range": [10, 50],
		"penalties": {
			"insufficient_signals": -10,
			"insufficient_trades": -5,
			"excessive_trades": -3,
			"unprofitable": -8,
			"low_win_rate": -4,
			"high_drawdown": -6,
			"backtest_failed": -12,
			"critical_error": -15,
			"default": -10
		}
	},
	"risk_management": {
		"stop_loss_range": [0.02, 0.08],
		"take_profit_range": [0.03, 0.12]
	},
	"signal_generation": {
		"min_history_bars": 50
	},
	"saving": {
		"strategy_dir": "../strategies/new",
		"config_dir": "../configs/new",
		"results_dir": "../results"
	}
}
